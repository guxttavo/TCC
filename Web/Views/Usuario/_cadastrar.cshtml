@model Usuario

@{
    Layout = null;
}

<div class="container-cadastrar">
    <div class="cor-de-fundo">
        <div class="cadastrar-usuario">
            <h1 class="display-4">Cadastrar Usuário</h1>
        </div>
        <form id="cadastroUsuario">
            <div class="">
                <input asp-for="nome_completo" type="text" class="cadastro-input" placeholder="Nome">
            </div>
            <div class="">
                <input asp-for="apelido" type="text" class="cadastro-input" placeholder="Apelido">
            </div>
            <div class="">
                <input asp-for="email" type="email" class="cadastro-input" placeholder="Email">
            </div>
            <div class="">
                <select asp-for="perfil" class="cadastro-input" placeholder="perfil">
                    <option value="0">Selecione</option>
                    <option value="@Core.Enum.PerfilEnum.Admin">Administrador</option>
                    <option value="@Core.Enum.PerfilEnum.Padrao">Padrão</option>
                </select>
            </div>
            <div class="">
                <input asp-for="senha" type="text" class="cadastro-input" placeholder="Senha">
            </div>
            <button type="button" class="btn btn-primary" onclick="usuario.cadastrarUsuario()">Cadastrar</button>
            <a asp-controller="Usuario" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>
