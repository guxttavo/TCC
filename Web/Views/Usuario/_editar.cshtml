@model Usuario

@{
    Layout = null;
}

<div class="container-editar">
    <div class="text-center">
        <h1 class="display-4">Editar Usuário</h1>
    </div>
    <form id="editarUsuario">
        <div class="form-group">
            <input asp-for="nome_completo" type="text" class="form-control" placeholder="Nome">
        </div>
        <div class="form-group">
            <input asp-for="apelido" type="text" class="form-control" placeholder="Apelido">
        </div>
        <div class="form-group">
            <input asp-for="email" type="email" class="form-control" placeholder="Email">
        </div>
        <div class="form-group">
            <select asp-for="perfil" type="text" class="form-control" placeholder="Perfil">
                <option value="0">Selecione</option>
                <option value="@Core.Enum.PerfilEnum.Admin">Administrador</option>
                <option value="@Core.Enum.PerfilEnum.Admin">Padrão</option>
            </select>
        </div>
        <div class="form-group">
            <input asp-for="senha" type="text" class="form-control" placeholder="Senha">
        </div>

        <button type="button" class="btn btn-primary" onclick="usuario.editarUsuario()">Editar</button>
        <a asp-controller="Usuario" asp-action="Index">Voltar</a>
    </form>
</div>