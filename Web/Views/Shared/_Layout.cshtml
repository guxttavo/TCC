<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MapInfra</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/_layout.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" />
</head>

<body>
    <main id="main">
        <aside id="menu-lateral">
            <div class="gabiru">
                <div class="row barra-lateral">
                    <div>
                        <a class="titulo" asp-controller="Home" asp-action="Index">DataInfra</a>
                        <ul class="opcoes">
                            <li class="opcoes-lista">
                                <a asp-controller="Usuario" asp-action="Index" class="opcao-menu">
                                    <span class="material-symbols-outlined">group</span>
                                    Gerenciamento de Usuários
                                </a>
                            </li>
                            <li class="opcoes-lista">
                                <a asp-controller="Suporte" asp-action="Index" class="opcao-menu">
                                    <span class="material-symbols-outlined">help</span>
                                    Suporte
                                </a>
                            </li>
                            <li class="opcoes-lista">
                                <a asp-controller="Denuncia" asp-action="Index" class="opcao-menu">
                                    <span class="material-symbols-outlined"> report </span>
                                    Realize uma Denuncia
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </aside>
        <section id="corpo">
            @RenderBody()
        </section>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
